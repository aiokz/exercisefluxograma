#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
#include <ctype.h>

void main(){
    setlocale (LC_ALL, "Portuguese");
    int n, soma = 0, resto;
    
    printf("Numero: \n");
    scanf("%d", &n);
    
    while(n != 0){
    	resto = n % 10;
    	soma += resto;
    	n = n/10;
    }
    printf("\nA soma dos digitos Ã©: %d", soma);
}
